# Fikiri Solutions - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=auth/credentials.json
GMAIL_TOKEN_PATH=auth/token.pkl
GMAIL_MAX_RESULTS=10

# Email Processing Settings
AUTO_REPLY_ENABLED=true
REPLY_TEMPLATE="Hi {sender_name},\n\nThank you for your email regarding \"{subject}\".\n\nI have received your message and will get back to you as soon as possible.\n\nBest regards,\nFikiri Solutions Team"
EMAIL_SIGNATURE="\n\n---\nFikiri Solutions\nðŸ“§ info@fikirisolutions.com\nðŸ“ž (555) 123-4567\nðŸ•’ Mon-Fri 9AM-6PM EST"

# General Settings
DEBUG=false
DRY_RUN=true

# Optional: Google OAuth2 Credentials (if not using file)
# GMAIL_CLIENT_ID=your_client_id_here
# GMAIL_CLIENT_SECRET=your_client_secret_here

# Optional: AI Integration (for future use)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Database (for future use)
# DATABASE_URL=sqlite:///fikiri.db
# POSTGRES_URL=postgresql://user:pass@localhost/fikiri

# Optional: Webhook URLs (for future use)
# WEBHOOK_URL=https://your-webhook-endpoint.com/gmail-events
# ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-id

# CRM Configuration
CRM_STORAGE_PATH=data/leads.json
CRM_DEFAULT_STAGE=new
BUSINESS_NAME=Fikiri Solutions

# Optional: Google Sheets Integration
ENABLE_GOOGLE_SHEETS=false
GOOGLE_SHEET_ID=your_sheet_id_here

# Optional: Notion Integration
ENABLE_NOTION=false
NOTION_API_KEY=your_notion_api_key_here
NOTION_DB_ID=your_notion_database_id_here

# Optional: OpenAI Integration (for follow-up generation)
OPENAI_API_KEY=your_openai_api_key_here
