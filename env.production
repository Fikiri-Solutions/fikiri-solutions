# Fikiri Solutions - Production Environment Configuration
# Copy this file to .env and configure with your production values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Fikiri Solutions
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production

# ============================================================================
# SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL=sqlite:///data/production.db
REDIS_URL=redis://localhost:6379

# ============================================================================
# AUTHENTICATION SETTINGS
# ============================================================================
# Generate a secure JWT secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# ============================================================================
# STRIPE INTEGRATION
# ============================================================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# ============================================================================
# AI & ML SERVICES
# ============================================================================
# Get from Hugging Face: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your_huggingface_token_here

# Get from OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================================================
# VECTOR DATABASE
# ============================================================================
# Get from Pinecone: https://app.pinecone.io/organizations
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp

# ============================================================================
# EMAIL SETTINGS
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://fikirisolutions.com,https://app.fikirisolutions.com
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
MAX_FILE_SIZE=10485760

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/production.log
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# BACKUP SETTINGS
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# GOOGLE GMAIL API (Existing)
# ============================================================================
# Your existing Gmail API credentials
GMAIL_CREDENTIALS_PATH=auth/credentials.json
GMAIL_TOKEN_PATH=token.pkl

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================
# MongoDB (if using instead of SQLite)
# MONGODB_URL=mongodb://localhost:27017/fikiri

# PostgreSQL (if using instead of SQLite)
# POSTGRES_URL=postgresql://user:password@localhost:5432/fikiri

# Elasticsearch (for advanced search)
# ELASTICSEARCH_URL=http://localhost:9200

# Sentry (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id





